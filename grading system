#include <stdio.h>


int main()
{
    printf("Enter your marks: ");
    int marks=0;
    scanf("%d", &marks);

    if(marks >= 85)
    {
        printf("Your grade is A. Marvelous!!");
    }
    else if(marks <= 84 && marks >= 70)
    {
        printf("Your grade is B. Well done. Can do better... ");
    }
    else if(marks <= 69 && marks>= 55)
    {
        printf("Your grade is C. Pay more attention in class, please!!");
    }
    else if(marks <= 54 && marks>= 40)
    {
        printf("Your grade is D. Unacceptable >:(");
    }
    else if(marks <= 40)
    {
        printf("Your grade is F. Total failure..");
    }
    else
    {
        printf("Invalid information.");
    }
    return 0;
}
